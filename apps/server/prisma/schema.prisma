generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  passwordHash  String    @map("password_hash")
  emailVerified DateTime? @map("email_verified")
  role          Role      @default(USER)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([email])
  @@map("users")
}

model SubscriptionPackage {
  id String @id @default(cuid())

  name             String     @unique
  maxFolders       Int        @map("max_folders")
  maxNestingLevel  Int        @map("max_nesting_level")
  allowedFileTypes FileType[] @map("allowed_file_types")
  maxFileSizeMb    Int        @map("max_file_size_mb")
  totalFileLimit   Int        @map("total_file_limit")
  filesPerFolder   Int        @map("files_per_folder")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([name])
  @@map("subscription_packages")
}

enum Role {
  ADMIN
  USER
}

enum FileType {
  IMAGE
  VIDEO
  PDF
  AUDIO
}

model Token {
  id         String    @id @default(cuid())
  identifier String // email or user ID
  token      String    @unique
  expires    DateTime
  type       TokenType

  @@unique([type, identifier, token])
  @@index([type, token])
  @@map("tokens")
}

enum TokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}
